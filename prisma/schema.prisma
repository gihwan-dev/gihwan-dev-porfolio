// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Bio {
  bio_id      Int    @id @default(autoincrement())
  bio_img     String
  title       String
  description String
  resume_link String
  email       String
}

model Documents {
  document_id      Int             @id @default(autoincrement())
  thumbnail        String
  title            String
  description      String
  content          String
  document_type_id Int
  document_type    Document_Type   @relation(fields: [document_type_id], references: [document_type_id])
  project_tags     Document_Tags[]
  screen_images    Screen_Image[]
  start_date       DateTime        @default(now())
  end_date         DateTime        @default(now())
  reg_date         DateTime        @default(now())
}

model Document_Type {
  document_type_id   Int             @id @default(autoincrement())
  document_type_name String          @unique
  documents          Documents[]
  document_tags      Document_Tags[]
}

model Document_Tags {
  document_tag_id  Int                      @id @default(autoincrement())
  name             String                   @unique
  text_color       String
  background_color String
  document_type_id Int
  document_type    Document_Type            @relation(fields: [document_type_id], references: [document_type_id])
  Documents        Documents[]
  category         Document_Tags_Category[]
}

model Document_Tags_Category {
  dt_category_id Int             @id @default(autoincrement())
  name           String          @unique
  Project_tags   Document_Tags[]
}

model User {
  email    String @id
  password String
}

model Screen_Image {
  screen_image_id Int       @id @default(autoincrement())
  url             String
  type            String
  document_id     Int
  document        Documents @relation(fields: [document_id], references: [document_id])
  reg_date        DateTime  @default(now())
}
